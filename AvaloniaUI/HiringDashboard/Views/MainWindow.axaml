        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:HiringDashboard.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HiringDashboard.Controls"
        mc:Ignorable="d"
        Width="1200" Height="800"
        x:Class="HiringDashboard.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Hiring Console">
    <Window.Styles>
        <Style Selector="TextBlock.SectionTitle">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Violet40Brush}"/>
            <Setter Property="Margin" Value="20 30 0 10"/>
        </Style>
    </Window.Styles>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="238"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Left Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource BaseVioletBrush}" CornerRadius="0 30 30 0">
            <StackPanel>
                <TextBlock Text="Hiring Console" FontSize="18" FontWeight="Normal" Foreground="#FFFFFF" Margin="20 30 20 0"/>
                <Rectangle Height="24" Fill="Transparent"/>
                <TextBlock Classes="SectionTitle">MAIN</TextBlock>
                <local:SidebarButton IconData="M12 3l7.5 7L21 21h-9v-9h-3v10.5H3V10.5L12 3z" ButtonText="Dashboard" Classes="Active"/>
                <local:SidebarButton IconData="M20 3h-1V2c0-.5-.4-1-1-1s-1 .5-1 1v1H7V2c0-.5-.4-1-1-1s-1 .5-1 1v1H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 18H6v-2h3v2zm0-4H6v-2h3v2zm5 4h-3v-2h3v2zm0-4h-3v-2h3v2zm5 4h-3v-2h3v2zm0-4h-3v-2h3v2z" ButtonText="Calendar"/>
                <local:SidebarButton IconData="M15.5 2H8.4c-.8 0-1.5.7-1.5 1.5v17c0 .8.7 1.5 1.5 1.5h11c.8 0 1.5-.7 1.5-1.5V8L15.5 2zm2.6 16.5H10v-1.2h8.1v1.2zm0-2.4H10v-1.2h8.1v1.2zm0-2.4H10v-1.2h8.1v1.2z" ButtonText="Documents"/>
                <local:SidebarButton IconData="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-2 12H6v-2h12v2zm0-3H6V9h12v2zm0-3H6V6h12v2z" ButtonText="Messages"/>
                <TextBlock Classes="SectionTitle">RECRUITING</TextBlock>
                <local:SidebarButton IconData="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-8 16H7v-7h4v7zm6 0h-4v-7h4v7zm-6-9H7V6h4v4zm6 0h-4V6h4v4z" ButtonText="Vacancies"/>
                <local:SidebarButton IconData="M16 11c1.7 0 3-1.3 3-3s-1.3-3-3-3-3 1.3-3 3 1.3 3 3 3zm-8 0c1.7 0 3-1.3 3-3S9.7 5 8 5 5 6.3 5 8s1.3 3 3 3zm0 2c-2.3 0-7 1.2-7 3.5V19h14v-2.5c0-2.3-4.7-3.5-7-3.5zm8 0c-.3 0-.6 0-1 .1 1.2.8 2 2 2 3.4V19h6v-2.5c0-2.3-4.7-3.5-7-3.5z" ButtonText="Applicants"/>
                <TextBlock Classes="SectionTitle">COMPANY</TextBlock>
                <local:SidebarButton IconData="M16 11c1.7 0 3-1.3 3-3s-1.3-3-3-3-3 1.3-3 3 1.3 3 3 3zm-8 0c1.7 0 3-1.3 3-3S9.7 5 8 5 5 6.3 5 8s1.3 3 3 3zm0 2c-2.3 0-7 1.2-7 3.5V19h14v-2.5c0-2.3-4.7-3.5-7-3.5zm8 0c-.3 0-.6 0-1 .1 1.2.8 2 2 2 3.4V19h6v-2.5c0-2.3-4.7-3.5-7-3.5z" ButtonText="Employees"/>
                <local:SidebarButton IconData="M15 4.5c0-.8.7-1.5 1.5-1.5H21v16.5l-4.5 4.5H1.5c-.8 0-1.5-.7-1.5-1.5V4.5C0 3.7.7 3 1.5 3h12c.8 0 1.5.7 1.5 1.5zm-9 3c0 .8-.7 1.5-1.5 1.5h-3C.7 9 0 8.3 0 7.5S.7 6 1.5 6h3c.8 0 1.5.7 1.5 1.5zm6 6c0 .8-.7 1.5-1.5 1.5h-9c-.8 0-1.5-.7-1.5-1.5s.7-1.5 1.5-1.5h9c.8 0 1.5.7 1.5 1.5zm3-6c0 .8-.7 1.5-1.5 1.5h-3C9.7 9 9 8.3 9 7.5S9.7 6 10.5 6h3c.8 0 1.5.7 1.5 1.5z" ButtonText="Company Structure"/>
                <local:SidebarButton IconData="M20 6h-8l-1.4-1.4C10 4 9.3 3.7 8.7 3.7H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm-2.9 11.3c-.4.4-1 .7-1.6.7H9.4c-.6 0-1.1-.2-1.6-.7-.4-.4-.7-1-.7-1.6 0-.6.2-1.1.7-1.6.4-.4 1-.7 1.6-.7h6c.6 0 1.1.2 1.6.7.4.4.7 1 .7 1.6 0 .6-.2 1.1-.6 1.6z" ButtonText="Projects"/>
                <TextBlock Classes="SectionTitle">ACCOUNT</TextBlock>
                <local:SidebarButton IconData="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zM7.1 18.3c.4-1.2 2.1-2 3.9-2s3.4.8 3.9 2C13.6 19.4 12 20 12 20s-1.6-.6-2.9-1.7zm9.5-1.1c-1.3-1.8-3.5-3.1-5.6-3.1s-4.3 1.3-5.6 3.1C4.1 15.9 3 14 3 12c0-4.4 3.6-8 8-8s8 3.6 8 8c0 2-.9 3.9-2.4 5.2z" ButtonText="Profile"/>
                <local:SidebarButton IconData="M19.4 12.9c.1-.7.1-1.4.1-2.1s0-1.4-.1-2.1l2.3-1.7c.2-.2.3-.5.2-.8l-2.2-3.8c-.1-.3-.5-.4-.8-.3l-2.7 1.1c-1.1-.8-2.3-1.5-3.6-1.9l-.4-2.9c0-.3-.3-.5-.6-.5h-4.4c-.3 0-.6.2-.6.5l-.4 2.9c-1.3.4-2.5 1.1-3.6 1.9L.9 3.1c-.3-.1-.6 0-.8.3L-2 7.2c-.1.3-.1.6.2.8l2.3 1.7c-.1.7-.1 1.4-.1 2.1s0 1.4.1 2.1L-1.8 15c-.2.2-.3.5-.2.8l2.2 3.8c.1.3.5.4.8.3l2.7-1.1c1.1.8 2.3 1.5 3.6 1.9l.4 2.9c0 .3.3.5.6.5h4.4c.3 0 .6-.2.6-.5l.4-2.9c1.3-.4 2.5-1.1 3.6-1.9l2.7 1.1c.3.1.6 0 .8-.3l2.2-3.8c.1-.3.1-.6-.2-.8l-2.1-1.8zM12 15.5c-1.9 0-3.5-1.6-3.5-3.5s1.6-3.5 3.5-3.5 3.5 1.6 3.5 3.5-1.6 3.5-3.5 3.5z" ButtonText="Settings"/>
                <local:SidebarButton ButtonText="Log Out"/>
            </StackPanel>
        </Border>
        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Header -->
            <Grid Grid.Row="0" Margin="0 0 0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <ComboBox SelectedIndex="0">
                        <ComboBoxItem>Consideration</ComboBoxItem>
                    </ComboBox>
                    <ComboBox SelectedIndex="0">
                        <ComboBoxItem>Stage</ComboBoxItem>
                    </ComboBox>
                    <ComboBox SelectedIndex="0">
                        <ComboBoxItem>Position</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Classes="ProfileBorder">
                        <TextBlock Text="Bob Smith" VerticalAlignment="Center"/>
                    </Border>
                    <Button Content="+ Add Applicant" Background="#4D2C89" Foreground="White" Margin="20 0 0 0"/>
                </StackPanel>
            </Grid>
            <!-- Applicant List -->
            <ListBox Grid.Row="1">
                <ListBoxItem>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!-- <Image Source="applicant1.jpg" Width="40" Height="40" Margin="0 0 20 0"/> -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Sam Rogers" FontWeight="Bold"/>
                            <TextBlock Text=".NET Developer" Foreground="#A5A5A5" FontSize="12"/>
                        </StackPanel>
                        <TextBlock Grid.Column="2" Text="Screening" Foreground="#A5A5A5" Margin="20 0"/>
                        <TextBlock Grid.Column="3" Text="Melbourne, Australia" Foreground="#A5A5A5" Margin="20 0"/>
                        <TextBlock Grid.Column="4" Text="+61 400 000" Foreground="#A5A5A5" Margin="20 0"/>
                        <TextBlock Grid.Column="5" Text="22 Dec, 2023" Foreground="#A5A5A5"/>
                    </Grid>
                </ListBoxItem>
                <!-- Add more ListBoxItem for each applicant -->
            </ListBox>
        </Grid>
    </Grid>
</Window>